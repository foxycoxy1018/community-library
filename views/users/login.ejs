<% layout('layouts/boilerplate') %> 
<%- include('../partials/navbar') %> 
<div class="container d-flex justify-content-center align-items-center mt-5 mb-5">
    <div class="row">
        <div class="col-md-8 offset-md-3 col-xl-6 offset-xl-3">
            <div class="card mt-5 shadow">
                <img src="https://images.unsplash.com/photo-1481627834876-b7833e8f5570?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=928&q=80"
                    alt="" class="card-img-top" />
                <div class="card-body">
                    <h5 class="card-title">Login</h5>
                    <form action="/login" method="POST" class="validated-form" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="username">Username</label>
                            <input class="form-control" type="text" id="username" name="username" required autofocus>
                            <div class="invalid-feedback">
                                Please enter a username.
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="password">Password</label>
                            <input class="form-control" type="password" id="password" name="password" required>
                            <div class="invalid-feedback">
                                Please enter a password.
                            </div>
                        </div>
                        <div>
                            <p class="fw-lighter">
                                Don't have an account? Register <a href="/register">here</a>.
                            </p>
                        </div>
                        <div class="d-grid">
                            <button class="mt-3 btn btn-block">Login</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>