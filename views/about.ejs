<%- include('./partials/navbar') %> 
<div class="container mt-5 text-center">
    <div class="row">
        <div class="col-lg-6 p-5 mt-1">
            <img src="https://images.unsplash.com/photo-1606708392532-05472dbc94bf?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1470&q=80" class="d-block w-100" alt=""> 
