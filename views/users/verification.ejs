<% layout('layouts/boilerplate') %> 
<%- include('../partials/navbar') %> 
<div class="container">
    <div class="d-flex justify-content-center align-items-center mt-5 mb-5">
        <form action="/register/verify" method="POST" class="validated-form" novalidate>
            <h1 class="mt-5">
                Please submit the verification code sent to your email.
            </h1>
            <div class="mb-3">
                <label for="verificationCode" class="form-label">Verification Code</label>
                <input type="number" class="form-control" id="verificationCode" name="verificationCode" required>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
    <div class="d-flex justify-content-center align-items-center mt-5 mb-5">
        <form action="/register/verify?_method=put" method="POST">
            <button class="btn btn-success">Request new verification code.</button>
        </form>
    </div>
</div>
